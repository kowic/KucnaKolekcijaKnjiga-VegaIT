@model KucnaKolekcijaKnjiga_VegaIT.Web.Models.PageViewModels.AuthorSinglePageViewModel

@{
    ViewBag.Title = "Autor - kreiranje";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kreiranje autora</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Autor:</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.AuthorViewModel.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AuthorViewModel.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AuthorViewModel.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AuthorViewModel.NationalityId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.AuthorViewModel.NationalityId, new SelectList(Model.NationalityList, "NationalityId", "Nationality"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AuthorViewModel.NationalityId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kreiraj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

