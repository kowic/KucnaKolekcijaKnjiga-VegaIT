@model KucnaKolekcijaKnjiga_VegaIT.Web.Models.PageViewModels.AuthorListPageViewModel

@{
    ViewBag.Title = "Autor - početna";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Autori</h2>
<hr />

<p>
    @Html.RouteLink("Kreiraj novog autora", new { action = "Create", controller = "Author" }, new { @class = "btn btn-default" })
</p>

<table class="table table-striped col-md-12">
    <thead>
        <tr>
            <th class="col-md-6">Ime</th>
            <th class="col-md-4">Nacionalnost</th>
            <th class="col-md-2">Opcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model.AuthorViewModels)
        {
            <tr>
                <td>@author.Name</td>
                <td>@author.NationalityName</td>
                <td>
                    <a href="@Url.Action("Edit", "Author", new { id = author.AuthorId })" class="btn btn-primary-table btn-xs"><span class="glyphicon glyphicon-pencil"></span></a>
                    <a href="@Url.Action("Delete", "Author", new { id = author.AuthorId })" class="btn btn-primary-table btn-xs" onclick="return confirm('Da li ste sigurni da želite da obrišete odabranog autora?')"><span class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>

