@model KucnaKolekcijaKnjiga_VegaIT.Web.Models.PageViewModels.GenreSinglePageViewModel

@{
    ViewBag.Title = "Žanr - kreiranje";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kreiranje žanra</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Žanr:</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.GenreViewModel.Genre, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.GenreViewModel.Genre, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GenreViewModel.Genre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kreiraj" class="btn btn-default" />
            </div>
        </div>
    </div>
}
